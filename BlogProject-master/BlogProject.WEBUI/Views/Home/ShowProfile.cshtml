@using BlogProject.Entities
@model User
@{
    ViewBag.Title = "Profiliniz";
}
<script src="~/Scripts/jquery-3.6.0.min.js"></script>
<div class="container">
    <div class="row">
        <h2>@ViewBag.Title</h2>
        <hr />
    </div>
    <div class="row">
        <div class="col-md-2">
            <img src="~/Content/img/@Model.ProfileImageFileName" class="img-circle" width="128" height="128" />
        </div>
        <div class="col-md-10">
            <h3>@(Model.Name+" "+Model.Surname)</h3>
            <br />
            <h6><b>Username: </b>@Model.Username</h6>
            <h6><b>Email: </b>@Model.Email</h6>
            <br />
            <h6><a href="#">More...</a></h6>
        </div>

       
    </div>
</div>

<script>
    $(function () {
        $("footer").parent().hide();
    });
</script>